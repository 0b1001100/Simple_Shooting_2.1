<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>Simple_shooting_2_1</groupId>
  <artifactId>Simple_shooting_2_1</artifactId>
  <version>1.1.6</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>Simple_shooting_2_1.Simple_shooting_2_1</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.0</version>
        <configuration>
          <compilerArgs>--enable-preview</compilerArgs>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-dependency-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.7.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
        <exclusion>
          <artifactId>opentest4j</artifactId>
          <groupId>org.opentest4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-platform-commons</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.apache.maven.plugin-testing</groupId>
      <artifactId>maven-plugin-testing-harness</artifactId>
      <version>3.3.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>commons-io</artifactId>
          <groupId>commons-io</groupId>
        </exclusion>
        <exclusion>
          <artifactId>plexus-archiver</artifactId>
          <groupId>org.codehaus.plexus</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.antlr</groupId>
      <artifactId>antlr-complete</artifactId>
      <version>4.11.1</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/Libraries/antlr.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.processing</groupId>
      <artifactId>Processing</artifactId>
      <version>4.1.3</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/Libraries/core.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.gluegen</groupId>
      <artifactId>gluegen-rt</artifactId>
      <version>4.1.3</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/Libraries/gluegen-rt.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>com.metsci.ext.org.jogamp.jogl</groupId>
      <artifactId>jogl-all</artifactId>
      <version>4.1.3</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/Libraries/jogl-all.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>org.parser</groupId>
      <artifactId>parser</artifactId>
      <version>1.0.0</version>
      <scope>system</scope>
      <systemPath>${pom.basedir}/Libraries/parser.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>21</maven.compiler.target>
    <java.version>21</java.version>
    <maven.compiler.source>21</maven.compiler.source>
  </properties>
</project>
